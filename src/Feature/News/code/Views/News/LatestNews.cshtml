@using Sitecore.Feature.News
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Mvc.Presentation
@using Sitecore.Feature.News.Models
@using Glass.Mapper.Sc.Web.Mvc

@model IEnumerable<INewsArticle>
<div class="well @RenderingContext.Current.Rendering.GetBackgroundClass()">
  <h5 class="text-uppercase">@Html.Sitecore().Dictionary("/news/latest news/title", "News")</h5>
  <ul class="media-list">
    @foreach (var item in Model)
    {
      <li class="media">
        <div class="media-body">
          <date>
              @Html.Glass().Editable(item, x => x.NewsDate, x => x.NewsDate.ToString("MMMM dd,yyyy"))
          </date>
          <h4 class="media-heading">
            <a href="@item.Url">@Html.Glass().Editable(item, x => x.NewsTitle)</a>
          </h4>
        </div>
      </li>
    }
  </ul>
  <a href="@Html.Sitecore().CurrentRendering.Item.Url()" class="btn btn-default">
    @Html.Sitecore().Dictionary("/news/latest news/read more", "Read more")
  </a>
</div>